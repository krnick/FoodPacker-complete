<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="17dp"
            android:src="@drawable/brandmark" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/pagetitle"
        android:layout_below="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="選購之餐點"
            android:textSize="23dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/view"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pagetitle"
        android:layout_above="@+id/total_panel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </ListView>
    <RelativeLayout
        android:id="@+id/total_panel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/test4"
        android:layout_above="@+id/check_panel">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:text="Cost"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="35dp" />
            <TextView
                android:text="$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_toLeftOf="@+id/money_all"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/money_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_panel"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/skyblue"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/view"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <Button
                android:id="@+id/checkout"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="總額"
                android:textSize="20dp"
                android:textColor="@color/dark"
                android:background="@drawable/test2"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/sendout"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="送出"
                android:textSize="20dp"
                android:textColor="@color/darkgreen"
                android:background="@drawable/test3"
                android:layout_toRightOf="@+id/checkout"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>