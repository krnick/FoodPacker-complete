<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="90dp">
        <TextView
            android:id= "@+id/item_product_name"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_marginTop="23dp"
            android:textSize= "19sp"
            android:textStyle="bold"
            android:text= "商品名稱"/>
        <TextView
            android:id="@+id/left"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:textSize= "15sp"
            android:text= "("
            android:layout_below="@+id/item_product_name"/>
        <TextView
            android:id= "@+id/item_product_money"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:textSize= "15sp"
            android:text= "$"
            android:textColor="@color/cash_yellow"
            android:layout_below="@+id/item_product_name"
            android:layout_toRightOf="@+id/left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id= "@+id/item_product_price"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_below="@+id/item_product_name"
            android:layout_toRightOf="@+id/item_product_money"
            android:layout_marginRight="10dp"
            android:textSize= "15sp"
            android:text= "0"
            android:textColor="@color/cash_yellow"/>
        <TextView
            android:id="@+id/right"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:textSize= "15sp"
            android:text= ")"
            android:layout_below="@+id/item_product_name"
            android:layout_toRightOf="@+id/item_product_price"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/number"
        android:layout_toLeftOf="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="90dp">

        <!--<TextView-->
            <!--android:id="@+id/X"-->
            <!--android:text= "x"-->
            <!--android:textSize= "20sp"-->
            <!--android:layout_width= "wrap_content"-->
            <!--android:layout_height= "wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_centerVertical="true" />-->
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:background="@drawable/customborder">
            <TextView
                android:id="@+id/item_product_num"
                android:text= "1"
                android:textSize= "25sp"
                android:layout_width= "wrap_content"
                android:layout_height= "wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true">
        <Button
            android:id= "@+id/item_btn_add"
            android:layout_width= "33dp"
            android:layout_height= "33dp"
            android:layout_centerVertical="true"
            android:text="+"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/test"/>

        <Button
            android:id= "@+id/item_btn_sub"
            android:layout_width= "33dp"
            android:layout_height= "33dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_btn_add"
            android:layout_centerVertical="true"
            android:text="-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/test5"/>
    </RelativeLayout>



</RelativeLayout>