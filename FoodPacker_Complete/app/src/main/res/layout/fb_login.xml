<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="380px"
        android:layout_height="380px"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:layout_marginTop="15dp"
        android:src="@drawable/foodpacker"
        android:id="@+id/projectname" />
    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/fb"
        fbutton:shadowColor="@color/fb_shadow"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="12dp"
        fbutton:cornerRadius="10dp"
        android:minHeight="5dp"
        android:minWidth="5dp"
        android:id="@+id/fb_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark"
        android:textSize="40px"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Facebook 登入"
        android:textColor="@color/iceblue"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pack food, Connect People"
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="35px"/>

</LinearLayout>