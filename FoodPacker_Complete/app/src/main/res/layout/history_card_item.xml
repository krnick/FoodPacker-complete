<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/friend_cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        card_view:elevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingTop="12dp"
        card_view:contentPaddingRight="12dp"
        card_view:contentPaddingLeft="12dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!--Button
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="下單囉"
                    android:id="@+id/button"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" /-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/friend_img"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/foodpacker_icon"
                    android:layout_alignTop="@+id/friend_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/friend_name"
                    android:text="Hello world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toRightOf="@+id/friend_img"
                    android:layout_toEndOf="@+id/friend_img">
                </TextView>
                <TextView
                    android:id="@+id/tv_blah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_name"
                    android:text="於10分鐘前"
                    android:textSize="14dp"
                    android:layout_alignLeft="@+id/friend_name"
                    android:layout_alignStart="@+id/friend_name">
                </TextView>
                <LinearLayout
                    android:id="@+id/crd_content"
                    android:layout_below="@id/friend_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <!--<TextView-->
                        <!--android:id="@+id/default_content"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="20dp"-->
                        <!--android:text="項目">-->
                    <!--</TextView>-->
                    <TextView
                        android:id="@+id/restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/dark"
                        android:text="餐點">
                    </TextView>
                </LinearLayout>

            </RelativeLayout>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@color/view" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>